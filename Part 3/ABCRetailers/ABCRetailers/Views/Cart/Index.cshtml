@model ABCRetailers.Models.ViewModels.CartPageViewModel

@{
    ViewData["Title"] = "My Cart";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        @if (!Model.Items.Any())
        {
            <div class="alert alert-info fade show text-center" role="alert">
                Your cart is empty.
            </div>
        }
        else
        {
            <!-- Update Quantities Form -->
            <form asp-action="UpdateQuantities" method="post">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th style="width:120px;">Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            var item = Model.Items[i];
                            <tr>
                                <td>@item.ProductName</td>
                                <td>
                                    <input type="hidden" name="items[@i].ProductId" value="@item.ProductId" />
                                    <input type="number" name="items[@i].Quantity" value="@item.Quantity" min="1" required class="form-control" />
                                </td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.Subtotal.ToString("C")</td>
                                <td>
                                    <!-- Remove button outside the main form -->
                                    <form asp-action="Remove" asp-route-productId="@item.ProductId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" aria-label="Remove @item.ProductName">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="fw-bold">
                        <tr>
                            <td colspan="3" class="text-end">Total</td>
                            <td colspan="2">@Model.Total.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-primary" aria-label="Update Cart Quantities">
                        <i class="fas fa-sync-alt"></i> Update Cart
                    </button>

                    <!-- Checkout Button (POST form outside the main form) -->
                    <form asp-action="Checkout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success" aria-label="Proceed to Checkout">
                            <i class="fas fa-credit-card"></i> Checkout
                        </button>
                    </form>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Fade out empty cart alert after a few seconds
        setTimeout(() => {
            const alert = document.querySelector('.alert');
            if (alert) {
                alert.classList.remove('show');
            }
        }, 4000);
    </script>
}
