@* /Views/Login/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 text-center">
        <h2 class="text-danger">
            <i class="fas fa-ban me-2"></i> @ViewData["Title"]
        </h2>
        <p class="lead mt-3">You do not have permission to access this page.</p>
        <p class="text-muted">If you believe this is a mistake, please contact the system administrator.</p>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">
            <i class="fas fa-home me-1"></i> Go to Home
        </a>
    </div>
</div>
