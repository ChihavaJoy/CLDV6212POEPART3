@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 text-center">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-exclamation-triangle me-2"></i> An Error Occurred</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-3">Something went wrong while processing your request.</h4>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong>
                    <code>@Model.RequestId</code>
                </p>
            }

            <p class="text-muted mb-3">
                If this problem persists, contact support with the Request ID above.
            </p>

            <p class="text-warning mb-3">
                <strong>Note:</strong> Development details are hidden in production. Switch to <strong>Development</strong> environment for detailed errors.
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home me-1"></i> Back to Home
            </a>
        </div>
    </div>
</div>
