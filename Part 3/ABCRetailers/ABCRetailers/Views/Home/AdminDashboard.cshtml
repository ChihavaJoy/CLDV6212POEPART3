@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-2">Welcome, @User.Identity?.Name!</h2>
        <p class="text-muted mb-4">You are logged in as an <strong>Administrator</strong>.</p>

        <div class="list-group">
            <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action mb-2">
                <i class="fas fa-users me-2"></i> Manage Customers
            </a>
            <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action mb-2">
                <i class="fas fa-box-open me-2"></i> Manage Products
            </a>
            <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action mb-2">
                <i class="fas fa-receipt me-2"></i> View & Process Orders
            </a>
            <a asp-controller="Upload" asp-action="Index" class="list-group-item list-group-item-action mb-2">
                <i class="fas fa-file-upload me-2"></i> View Uploaded Files
            </a>
            <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action mb-2">
                <i class="fas fa-file-alt me-2"></i> Manage Privacy Policy
            </a>
        </div>
    </div>
</div>
