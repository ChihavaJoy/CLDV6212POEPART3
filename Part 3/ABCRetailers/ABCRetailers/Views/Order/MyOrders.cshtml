@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="card shadow-sm p-4 mb-4">
    <h2 class="mb-4"><i class="fas fa-receipt me-2"></i> My Orders</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Product</th>
                        <th>Order Date</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                    {
                        <tr>
                            <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                            <td>@order.ProductName</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>@order.Quantity</td>
                            <td>@order.TotalPrice.ToString("C")</td>
                            <td>
                                <span class="badge bg-@(GetStatusBadgeClass(order.Status))">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-info me-1" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> You have no orders yet.
        </div>
    }
</div>

@{
    string GetStatusBadgeClass(string status) => status?.ToLower() switch
    {
        "submitted" => "primary",
        "processing" => "info",
        "completed" => "success",
        "cancelled" => "danger",
        _ => "secondary"
    };
}
